<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blozi.bindtags.activities.getUserInfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:gravity="center_vertical|center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:layout_above="@+id/regbutton">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:id="@+id/userlayout"
            android:gravity="center_vertical|center"
            android:layout_above="@+id/passlayout"
            android:weightSum="1">
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="@string/login_username"
                android:id="@+id/textView6"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/user_name"
                android:hint="@string/login_msg_enter_mobile"
                android:layout_weight="0.57" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:id="@+id/passlayout"
            android:gravity="center_vertical|center"
            android:layout_above="@+id/showPass"
            android:weightSum="1">

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="@string/login_userpass"
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical" />

            <EditText
                android:inputType="textPassword"
                android:ems="20"
                android:layout_width="200dp"
                android:hint="@string/login_msg_enter_userpass"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:id="@+id/pass"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.57" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:gravity="top|center"
            android:weightSum="1">


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="确定"
                android:background="#CCE9F4"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:textStyle="bold"
                android:id="@+id/sure_to_go"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
