<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_configure_url"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.blozi.bindtags.activities.ConfigureUrlActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:id="@+id/toolbar_layout"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            android:overScrollMode="never"
            android:overlapAnchor="false"
            android:theme="@style/ToolbarTheme"
            app:collapsedTitleTextAppearance="@style/blozi.collapseToolbar.collapsedTitleTextAppearance"
            app:expandedTitleTextAppearance="@style/blozi.collapseToolbar.expandedTitleTextAppearance"
            app:popupTheme="@style/ToolbarTheme"
            app:title="@string/app_name" />
        <!--
app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        -->
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/clound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web_service_url"
            android:textColor="@color/viewfinder_mask" />


    </LinearLayout>

    <EditText
        android:id="@+id/web_service_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/PleaseFillTheServerAddress"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:singleLine="true"

        android:textColor="@color/light_orange_yellow"
        android:textColorHint="@color/viewfinder_mask" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/btn_border"
        android:textColor="@color/light_orange_yellow"
        android:textSize="@dimen/common_button_textSize"
        android:id="@+id/Default"
        android:text="@string/Default"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="29dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DesktopServiceAddress"
            android:textColor="@color/viewfinder_mask"
             />
    </LinearLayout>

    <EditText
        android:id="@+id/ServerIPPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/PleaseFillTheServerAddress"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:singleLine="true"
        android:textColor="@color/light_orange_yellow"
        android:textColorHint="@color/viewfinder_mask" />
</LinearLayout>
