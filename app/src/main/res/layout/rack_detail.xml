<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/rack_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fitsSystemWindows="true"
        android:paddingBottom="16dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rack_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:hint="@string/rack_name"
            android:importantForAutofill="yesExcludeDescendants"
            android:textColorHighlight="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/rack_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryLight"
                android:drawableTint="@color/colorPrimaryLight"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="19sp"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/rack_code"
                android:theme="@style/editText"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rack_code_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/rack_code"
            android:textColorHighlight="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rack_name_layout">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/rack_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryLight"
                android:drawableTint="@color/colorPrimaryLight"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="19sp"
                android:theme="@style/editText"
                android:nextFocusForward="@id/rack_max_lay"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rack_max_lay_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/max_lay"
            android:textColorHighlight="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rack_code_layout">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/rack_max_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryLight"
                android:drawableTint="@color/colorPrimaryLight"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="19sp"
                android:theme="@style/editText"
                android:nextFocusForward="@id/place_length"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/place_length_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/place_length"
            android:textColorHighlight="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rack_max_lay_layout">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/place_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryLight"
                android:drawableTint="@color/colorPrimaryLight"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="19sp"
                android:theme="@style/editText"
                android:nextFocusForward="@id/rack_height"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rack_height_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/height"
            android:textColorHighlight="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_length_layout">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/rack_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryLight"
                android:drawableTint="@color/colorPrimaryLight"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="19sp"
                android:theme="@style/editText"
                android:nextFocusForward="@id/rack_width"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rack_width_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/length"
            android:textColorHighlight="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimaryLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rack_height_layout">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/rack_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryLight"
                android:drawableTint="@color/colorPrimaryLight"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="19sp"
                android:theme="@style/editText"
                android:nextFocusForward="@id/rack_remarks"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/rack_remarks_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/remarks"
            android:singleLine="false"
            android:textColorHighlight="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimaryLight"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rack_width_layout">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/rack_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorPrimaryLight"
                android:drawableTint="@color/colorPrimaryLight"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:scrollbars="none"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="19sp"
                android:theme="@style/editText"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/rack_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rack_remarks_layout" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>